<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/skill_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="32dp"
    >

    <TextView
        android:id="@+id/skillsListItemTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/primaryTextColor"
        android:gravity="center"
        android:text="@string/skill_name_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/skillsListItemCheckbox"
        android:textSize="24sp"
        />

    <CheckBox
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/skillsListItemCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/skillsListItemTextView"
        />

</androidx.constraintlayout.widget.ConstraintLayout>