<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/showProfile">

    <fragment
        android:id="@+id/showProfile"
        android:name="com.example.lab3.ShowProfile"
        android:label="show_profile_fragment"
        tools:layout="@layout/show_profile_fragment" >
        <action
            android:id="@+id/action_showProfile_to_editProfile"
            app:destination="@id/editProfile" />
        <action
            android:id="@+id/action_showProfile_to_show_advertisement"
            app:destination="@id/showAdvertisement" />
    </fragment>

    <fragment
        android:id="@+id/showAdvertisement"
        android:name="com.example.lab3.ShowAdvertisement"
        android:label="show_advertisement_fragment"
        tools:layout="@layout/show_time_slot_details_fragment" >
        <action
            android:id="@+id/action_showAdvertisement_to_editAdvertisement"
            app:destination="@id/editAdvertisement" />
    </fragment>

    <fragment
        android:id="@+id/editAdvertisement"
        android:name="com.example.lab3.EditAdvertisement"
        android:label="edit_advertisement_fragment"
        tools:layout="@layout/edit_time_slot_details_fragment" >
    </fragment>


    <fragment
        android:id="@+id/editProfile"
        android:name="com.example.lab3.EditProfile"
        android:label="edit_profile_fragment"
        tools:layout="@layout/edit_profile_fragment" >
        <action
            android:id="@+id/action_editProfile_to_editSkills"
            app:destination="@id/editSkills" />
    </fragment>
    <fragment
        android:id="@+id/editSkills"
        android:name="com.example.lab3.EditSkills"
        android:label="edit_skills_fragment"
        tools:layout="@layout/edit_skills_fragment" />
</navigation>